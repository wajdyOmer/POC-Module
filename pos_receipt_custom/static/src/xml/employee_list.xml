<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="point_of_sale.EmployeeList">
        <Dialog bodyClass="'partner-list p-0'" modalRef="modalRef" contentClass="'h-100'">
            <t t-set-slot="header">
                <button t-if="!ui.isSmall and this.pos.cashier._role !== 'minimal'" class="btn btn-primary btn-lg lh-lg me-2" role="img" aria-label="Add a employee"
                        t-on-click="() => this.editEmployee()"
                        title="Add a employee">
                Create 
                </button>
                <span class="modal-title fs-4">Choose employee</span>
                <Input tModel="[state, 'query']"
                    class="'ms-auto'"
                    isSmall="ui.isSmall"
                    placeholder.translate="Search Employees..."
                    icon="{type: 'fa', value: 'fa-search'}"
                    t-on-enter="() => this.searchEmployee()"
                    autofocus="true"
                    debounceMillis="100" />
            </t>
            <div class="h-100">
                <t t-set="initialEmployees" t-value="getEmployees(this.state.initialEmployees)"/>
                <t t-set="loadedEmployees" t-value="getEmployees(this.state.loadedEmployees)"/>
                <t t-set="nbrEmployees" t-value="initialEmployees.length + loadedEmployees.length"/>
                <table class="table table-hover">
                    <tbody class="h-100" t-att-class="{'d-none': !nbrEmployees}">
                        <t t-foreach="initialEmployees" t-as="employee" t-key="employee.id">
                            <EmployeeLine
                                close="props.close"
                                employee="employee"
                                isSelected="props.employee?.id === employee.id"
                                isBalanceDisplayed="isBalanceDisplayed"
                                onClickEdit.bind="(p) => this.editEmployee(p)"
                                onClickUnselect.bind="() => this.clickEmployee()"
                                onClickOrders.bind="(p) => this.goToOrders(p)"
                                onClickEmployee.bind="clickEmployee"/>
                        </t>
                        <t t-foreach="loadedEmployees" t-as="employee" t-key="employee.id">
                            <EmployeeLine
                                close="props.close"
                                employee="employee"
                                isSelected="props.employee?.id === employee.id"
                                isBalanceDisplayed="isBalanceDisplayed"
                                onClickEdit.bind="(p) => this.editEmployee(p)"
                                onClickUnselect.bind="() => this.clickEmployee()"
                                onClickOrders.bind="(p) => this.goToOrders(p)"
                                onClickEmployee.bind="clickEmployee"/>
                        </t>
                    </tbody>
                </table>
                <div class="text-center" t-if="!nbrEmployees">
                    <div class="text-muted mt-5">
                        <i class="fa fa-users fa-3x"></i>
                        <p class="mt-3">No employees found, press enter to load more.</p>
                    </div>
                </div>
            </div>
            <t t-set-slot="footer">
                <div class="d-flex flex-row gap-2 w-100">
                    <button t-if="ui.isSmall and this.pos.cashier._role !== 'minimal'" class="btn btn-primary btn-lg lh-lg flex-fill" role="img" aria-label="Add a employee"
                        t-on-click="() => this.editEmployee()"
                        title="Add a employee">
                    New 
                    </button>
                    <button class="btn btn-secondary btn-lg lh-lg flex-fill" t-on-click="() => this.clickEmployee(this.props.employee)">Discard</button>
                </div>
            </t>
        </Dialog>
    </t>

</templates>