<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_discount_product" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.point_of_sale.discount_product</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='pos_global_discount']" position="inside">
                <div class="row" invisible="not pos_module_pos_discount" >
                    <label string="Static Discount Product" for="pos_static_discount_product_id" class="col-lg-3 o_light_label"/>
                    <field name="pos_static_discount_product_id" required="pos_module_pos_discount"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>